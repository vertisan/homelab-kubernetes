{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/manifests/.+/resources/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/manifests/.+/values\\.yaml$/",
      "/manifests/.+/.+\\.values\\.yaml$/"
    ]
  },
  "kustomize": {
    "enabled": true,
    "managerFilePatterns": [
      "/manifests/.+/kustomization\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^manifests/.+/kustomization\\.yaml$/"
      ],
      "matchStrings": [
        "version: (?<currentValue>.*?) # (?<datasource>.*?)\\/(?<depName>.*?)(?:\\?|$)"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "description": "Default: disable automerge for docker (but allow overrides)",
      "matchDatasources": [
        "docker"
      ],
      "automerge": false,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Default: disable automerge for helm (but allow overrides)",
      "matchDatasources": [
        "helm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "automergeType": "branch",
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Auto-merge updates for selected paths",
      "matchFileNames": [
        "manifests/n8n/**",
        "manifests/gitlab-runner/**",
        "manifests/cloudflare-vrsfactory/**",
        "disabled/**"
      ],
      "automerge": true,
      "automergeType": "branch",
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Auto-merge PATCH updates for selected paths",
      "matchFileNames": [
        "manifests/grafana/**",
        "manifests/traefik/**",
        "manifests/argo-cd/**"
      ],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "patch"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "cloudflare packages",
      "matchPackageNames": [
        "/^cloudflare/"
      ]
    }
  ],
  "helmv3": {
    "managerFilePatterns": [
      "/manifests/.+/kustomization\\.yaml$/"
    ]
  }
}
